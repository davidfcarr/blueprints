{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/",
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "login",
			"username": "admin"
		},
        {
            "step": "installPlugin",
            "pluginData": {
                "resource": "wordpress.org/plugins",
                "slug": "rsvpmaker"
            },
            "options": {
                "activate": true
            }
        },
        {
            "step": "installPlugin",
            "pluginData": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/davidfcarr/blueprints/refs/heads/main/test-plugin.zip"
            }    
        },
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "RSVPMaker Test",
                "blogdescription": "Event and email marketing for WordPress"
            }
        }
	]
}